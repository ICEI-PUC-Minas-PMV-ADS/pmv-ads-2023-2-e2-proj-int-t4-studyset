@model studyset.Models.Sessao

@{
    ViewData["Title"] = "Apagar sessão de estudo";
}

<h1>Apagar sessão de estudo</h1>

<h3>Tem certeza de que deseja apagar esta sessão de estudo?</h3>
<div>
    <h4>Sessão</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TituloSessao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloSessao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataSessao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataSessao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InicioSessao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InicioSessao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FimSessao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FimSessao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aluno.NomeUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-info">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
