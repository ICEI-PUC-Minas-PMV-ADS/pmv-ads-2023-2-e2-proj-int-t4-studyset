            <input type="hidden" asp-for="Id" />
                <a asp-action="Edit" asp-route-id="@Model.Id" class="button">Voltar</a>
            <input type="submit" value="apagar" class="button" id="deleteButton" />
        </form>
        </div>
    </div>
</body>
