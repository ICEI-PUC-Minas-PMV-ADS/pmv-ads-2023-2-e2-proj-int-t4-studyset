}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Calendario</title>
    <link rel="stylesheet" href="calendario.css">
    <meta name="viewport" content="width=device-width, initial-1.0">

    <link
    <link rel="stylesheet" href="http://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <script src="calendario.js" defer></script>
</head>
<body>
    <header>
        <nav id="mainNavbar" class="navbar navbar-dark navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/src/pages/index.html">
                    <img id="logo" src="/src/img/studyset_logoBranco.png" alt="" />
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end"
                     id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
        </div>
    </header>
    <div class="body-container">
        <aside>
            <div class="wrapper">
                <header>
                    <p class="current-date">Setembro</p>
                    <div class="icons">
                        <span id="prev" class="material-symbols-rounded">chevron_left</span>
                        <span id="next" class="material-symbols-rounded">chevron_right</span>
                    </div>
                </header>
                <div class="calendar">
                    <ul class="weeks">
                        <li>Dom</li>
                        <li>Seg</li>
                        <li>Ter</li>
                        <li>Qua</li>
                        <li>Qui</li>
                        <li>Sex</li>
                        <li>Sáb</li>
                    </ul>
                    <ul class="days"></ul>
                </div>
            </div>

        </aside>
        <section>
            <h4 class="cronograma"> Cronograma</h4>
            <div class="container2">
                <div class="day">
                    <p>Domingo</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>

                <div class="day">
                    <p>Segunda</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>

                <div class="day">
                    <p>Terça</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>

                <div class="day">
                    <p>Quarta</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>

                <div class="day">
                    <p>Quinta</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>

                <div class="day">
                    <p>Sexta</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>

                <div class="day">
                    <p>Sábado</p>
                    <div class="balloon">
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                        <div class="note" contenteditable="true" data-max-words="200"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="container3">
        <h2 class="tituloproxevento"> Eventos próximos</h2>
        <div class="listaDetalhes" id="listaDetalhes">
        </div>

        <h2 class="titulosH2">Adicionar novo evento</h2>

        <div id="containerGrande">
            <form action="" id="eventos" class="formContainer formContainerGrande">

                <div id="campoTitulo">
                    <label for="cargoTitulo">Título do evento:</label>
                    <input type="text" name="cargoTitulo" id="Titulo" class="inputText inputData" />
                </div>

                <div id="campoTipo">
                    <label for="Tipo" class="labelForm">Tipo:</label>
                    <input type="text" name="areaTipo" id="areaTipo" class="inputText inputData" />
                </div>

                <div id="campoRelevancia">
                    <label for="relevancia" class="">Relevancia:</label>
                    <input type="text" name="eventoRelevancia" id="eventoRelevancia" class="inputText inputData" />
                </div>

                <div id="btnArea" class="btnArea">
                    <button id="btnSalvarXp" class="formBtn">salvar</button>
                    <button id="btnLimpar" type="reset" class="formBtn">limpar</button>
                </div>
            </form>
        </div>
    </div>
    <footer>
        <p>Footer</p>
    </footer>
    </div>
    <script src="https://kit.fontawesome.com/331a34d5ed.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
</body>
</html>