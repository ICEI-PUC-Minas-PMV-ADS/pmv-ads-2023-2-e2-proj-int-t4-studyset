@page
@model studyset.Areas.Identity.Pages.Account.EditEmailPasswordModel

@{
    ViewData["Title"] = "Editar dados";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700;900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/root.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/edit.css" asp-append-version="true" />
</head>
<body>
    <div class="mainContainer">
        <form class="edit" asp-page-handler="Edit" method="post">
            <h1>Editar dados</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <input type="hidden" asp-for="Input.Id" />

            <div class="form-group">
                <label asp-for="Input.NewEmail">E-mail</label>
                <input asp-for="Input.NewEmail" class="form-control" aria-required="true" placeholder="e-mail" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.NewPassword">Alterar senha</label>
                <input asp-for="Input.NewPassword" class="form-control" type="password" placeholder="insira nova senha" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar nova senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="confirmar nova senha" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" placeholder="insira sua senha atual" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group submit">
                <a class="button" asp-area="Identity" asp-page="/Account/Edit">Voltar</a>
                <button class="button" type="submit">Salvar</button>
            </div>
        </form>

    </div>


    <script src="https://kit.fontawesome.com/331a34d5ed.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

